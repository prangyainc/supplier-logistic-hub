<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml" class="viewPadding">
	<Dialog title="Upload CSV File" titleAlignment="Center" closeOnNavigation="true" draggable="true" contentWidth="50rem" resizable="true"
		class="sapUiSizeCompact" verticalScrolling="true">
		<VBox alignContent="Center" width="70%">
			<u:FileUploader id="idfileUploader" width="100%" sameFilenameAllowed="false" placeholder="Choose a CSV file" style="Emphasized"></u:FileUploader>
		</VBox>
		<beginButton>
			<Button text="Upload" press="onSubmitFile"></Button>
		</beginButton>
		<endButton><Button text="Cancel" press="onCancelBtn" type="Reject"/></endButton>
	</Dialog>
</core:FragmentDefinition>